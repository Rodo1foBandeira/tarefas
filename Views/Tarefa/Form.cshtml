@model Tarefa

@{
    ViewData["Title"] = "Tarefa";
}

<div class="row">
    <div class="col-xl-12">
        @if(Model != null){
            <h2>Editar</h2>
        }
        else
        {
            <h2>Nova tarefa</h2>
        }
    </div>
    
    @using (Html.BeginForm("SaveUpdate", "Tarefa", FormMethod.Post, new { @class="col-xl-12"}))
    {
        <div class="form-group">
            @Html.Label("Descricao", "Descrição")
            @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control" }) 
        </div>

        <div class="form-group">
            @Html.Label("Data Atividade", "Data Atividade")
            @Html.TextBoxFor(m => m.DtAtividade, new { @class = "form-control" }) 
        </div>

        <div class="form-group">
            <button class="btn btn-primary">Salvar</button>
        </div>
    }
    
</div>